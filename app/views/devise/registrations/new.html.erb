<div class="min-h-screen flex items-center justify-center">
  <div class="card w-full max-w-md shadow-xl p-6 bg-[#faf0e6]">
    <h2 class="text-2xl font-bold text-center mb-4">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-control mb-4">
        <%= f.label :user_name, "ユーザーネーム", class: "label" %>
        <%= f.text_field :user_name, autofocus: true, class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mb-4">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mb-4">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mb-4">
        <%= f.label :password_confirmation, "パスワード確認", class: "label" %>
        <%= f.password_field :password_confirmation, class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mt-6">
        <%= f.submit "登録する",
            class: "btn w-full bg-[#6b5a90] text-white hover:bg-[#5a4a7a] border-none" %>
      </div>
    <% end %>

    <p class="mt-4 text-center text-sm">
      すでにアカウントをお持ちですか？ 
      <%= link_to "ログイン",
          new_user_session_path,
          class: "text-[#6b5a90] hover:underline" %>
    </p>
  </div>
</div>
