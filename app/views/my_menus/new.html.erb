<div class="max-w-xl mx-auto mt-10">
  <div class="bg-[#faf0e6] rounded-2xl shadow-md p-6 sm:p-8">

    <h1 class="text-3xl font-bold mb-6">マイメニューを追加</h1>

    <%= form_with model: @my_menu, url: my_menus_path, class: "space-y-6" do |f| %>

      <!-- 料理名 -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">料理名</span>
        </label>
        <%= f.text_field :title, class: "input input-bordered w-full" %>
      </div>

      <!-- ジャンル -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">ジャンル</span>
        </label>
        <%= f.select :genre,
          options_for_select(
            MyMenu.genres.keys.map { |k| [I18n.t("enums.my_menu.genre.#{k}"), k] },
            f.object.genre
          ),
          { prompt: "選択してください" },
          { class: "select select-bordered w-full" } %>
      </div>

      <!-- タグ -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">タグ（例：簡単, 冷凍）</span>
        </label>
        <%= f.text_field :tag_names, value: @my_menu.tags.map(&:name).join(', '), class: "input input-bordered" %>
      </div>


      <!-- 材料 -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">材料</span>
        </label>
        <%= f.text_area :ingredients, class: "textarea textarea-bordered w-full", rows: 3 %>
      </div>

      <!-- 参考URL -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">参考URL</span>
          </label>
        <%= f.url_field :reference_url, class: "input input-bordered w-full" %>
      </div>

      <!-- メモ -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">メモ</span>
        </label>
        <%= f.text_area :note, class: "textarea textarea-bordered w-full", rows: 3 %>
      </div>

      <!-- 最終調理日 -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">最終調理日</span>
        </label>
        <%= f.date_field :last_cooked_at, class: "input input-bordered w-full" %>
      </div>

      <!-- 送信 -->
      <!-- 送信 -->
      <div class="mt-6 flex justify-center">
        <%= f.submit "登録する", class: "btn btn-primary px-8" %>
      </div>
    <% end %>
  </div>

  <div class="max-w-xl mx-auto mt-6 px-4">
    <div class="flex justify-center">
      <%= link_to "←戻る", my_menus_path, class: "btn bg-white border border-base-300 hover:bg-base-200" %>
    </div>
  </div>
</div>
