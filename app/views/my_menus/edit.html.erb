<div class="max-w-xl mx-auto mt-10">
  <div class="bg-[#faf0e6] rounded-2xl shadow-md p-6 sm:p-8">

    <h1 class="text-3xl font-bold mb-6">マイメニューを編集</h1>

    <%= form_with model: @my_menu, class: "space-y-6" do |f| %>

      <div class="form-control">
        <label class="label"><span class="label-text font-semibold">料理名</span></label>
        <%= f.text_field :title, class: "input input-bordered w-full" %>
      </div>

      <div class="form-control">
        <label class="label"><span class="label-text font-semibold">ジャンル</span></label>
        <%= f.select :genre,
          options_for_select(MyMenu.genres.keys.map { |k| [I18n.t("enums.my_menu.genre.#{k}"), k] }, f.object.genre),
          { prompt: "選択してください" },
          { class: "select select-bordered" } %>
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">タグ（例：簡単, 冷凍）</span>
        </label>
        <%= f.text_field :tag_names, value: @my_menu.tags.map(&:name).join(', '), class: "input input-bordered" %>
      </div>

      <div class="form-control">
        <label class="label"><span class="label-text font-semibold">材料</span></label>
        <%= f.text_area :ingredients, class: "textarea textarea-bordered w-full", rows: 3 %>
      </div>

      <div class="form-control">
        <label class="label"><span class="label-text font-semibold">参考URL</span></label>
        <%= f.url_field :reference_url, class: "input input-bordered w-full" %>
      </div>

      <div class="form-control">
        <label class="label"><span class="label-text font-semibold">メモ</span></label>
        <%= f.text_area :note, class: "textarea textarea-bordered w-full", rows: 3 %>
      </div>

      <div class="form-control">
        <label class="label"><span class="label-text font-semibold">最終調理日</span></label>
        <%= f.date_field :last_cooked_at, class: "input input-bordered " %>
      </div>

      <div class="mt-6 flex justify-center gap-6">
        <%= f.submit "更新する",
              class: "btn bg-[#8469bf] text-white border-none hover:bg-[#8469bf]" %>
        <%= link_to "削除",
                my_menu_path(@my_menu),
                data: {
                  turbo_method: :delete,
                  turbo_confirm: "本当に削除しますか？"
                },
                class: "btn btn-outline btn-error" %>
      </div>
    <% end %>
  </div>

  <div class="mt-4 text-center">
    <%= link_to home_path, class: "nav-back-button" do %>
      ← ホーム
    <% end %>
</div>
