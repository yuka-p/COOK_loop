<div class="min-h-screen flex items-center justify-center">
  <div class="card w-full max-w-md shadow-xl p-6 bg-[#faf0e6]">
    <h2 class="text-2xl font-bold text-center mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-control mb-4">
        <%= f.label :email, "Email", class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mb-4">
        <%= f.label :password, "Password", class: "label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mb-4">
        <label class="cursor-pointer label">
          <%= f.check_box :remember_me,
              class: "checkbox border-[#6b5a90] checked:bg-[#6b5a90] checked:border-[#6b5a90]" %>
          <span class="label-text">ログイン状態を保持</span>
        </label>
      </div>

      <%= link_to "Forgot your password?",
          new_user_password_path,
          class: "text-[#6b5a90] hover:underline" %>

      <div class="form-control mt-6">
        <%= f.submit "Log in",
            class: "btn w-full bg-[#6b5a90] text-white hover:bg-[#5a4a7a] border-none" %>
      </div>
    <% end %>

    <p class="mt-4 text-center text-sm">
      まだアカウントをお持ちでないですか？ <br>
      <%= link_to "→ Create an account",
          new_user_registration_path,
          class: "text-[#6b5a90] hover:underline" %>
    </p>
  </div>
</div>
