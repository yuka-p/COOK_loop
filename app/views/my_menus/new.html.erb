<% content_for :title, "マイメニュー登録" %>
<div class="max-w-xl mx-auto mt-10 page-fade">
  <% if @my_menu.errors.any? %>
    <div class="bg-[#905a65] text-white max-w-xl mx-auto mt-4 px-4 py-3 rounded shadow-lg">
      <div class="text-sm space-y-1">
        <% @my_menu.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="bg-[#faf0e6] rounded-2xl shadow-md p-6 sm:p-8 mt-8">

    <%= form_with model: @my_menu, url: my_menus_path, class: "space-y-6" do |f| %>

      <!-- 料理名 -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">
            料理名
            <span class="text-[#905a65] ml-1">*</span>
          </span>
        </label>
        <%= f.text_field :title, class: "input input-bordered w-full" %>
      </div>

      <!-- ジャンル -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">
            ジャンル
            <span class="text-[#905a65] ml-1">*</span>
          </span>
        </label>
        <%= f.select :genre,
          options_for_select(
            MyMenu.genres.keys.map { |k| [I18n.t("enums.my_menu.genre.#{k}"), k] },
            f.object.genre
          ),
          { prompt: "選択してください" },
          { class: "select select-bordered w-full" } %>
      </div>

      <!-- タグ -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">タグ</span>
        </label>

        <%= f.text_field :tag_names,
            value: @my_menu.tags.map(&:name).join(', '),
            placeholder: "時短、冷凍、お弁当",
            class: "input input-bordered placeholder-gray-400" %>
      </div>

      <!-- 材料 -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">材料</span>
        </label>
        <%= f.text_area :ingredients, class: "textarea textarea-bordered w-full", rows: 3 %>
      </div>

      <!-- 参考URL -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">参考URL</span>
          </label>
        <%= f.url_field :reference_url, class: "input input-bordered w-full" %>
      </div>

      <!-- メモ -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">メモ</span>
        </label>
        <%= f.text_area :note, class: "textarea textarea-bordered w-full", rows: 3 %>
      </div>

      <!-- 最終調理日 -->
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold">最終調理日</span>
        </label>
        <%= f.date_field :last_cooked_at, class: "input input-bordered w-full" %>
      </div>

      <!-- 送信 -->
      <!-- 送信 -->
      <div class="mt-6 flex justify-center">
        <%= f.submit "登録する", class: "btn font-normal bg-[#907abf] text-white border-none hover:bg-[#907abf]" %>
      </div>
    <% end %>
  </div>

  <div class="max-w-xl mx-auto mt-6 px-4">
    <div class="flex justify-center">
        <%= link_to my_menus_path, class: "nav-back-button" do %>
          ← 戻る
        <% end %>
    </div>
  </div>
</div>
