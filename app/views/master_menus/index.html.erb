<div class="max-w-2xl mx-auto mt-8">

  <%# --- 選択中 menu_ids を取得して配列化 --- %>
  <% selected_menu_ids = Array(params[:menu_ids]) %>

  <!-- ページタイトル -->
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold">マスターメニュー一覧</h1>
  </div>

  <!-- フィルターエリア -->
  <div class="card bg-base-100 shadow p-4 inline-block">
    <div id="genreFilters" class="flex gap-2 flex-wrap">
    <!-- 全部ボタン（デフォルトでアクティブ） -->
    <button
      class="btn btn-primary genre-filter-button"
      data-genre="all"
      type="button">
      全部
    </button>
    <% ordered_genres = %w[main side soup staple] %>

    <% ordered_genres.each do |genre| %>
      <button
        class="btn genre-filter-button <%= genre_button_class(genre) %>"
        data-genre="<%= genre %>"
        type="button">
        <%= MasterMenu.genres_i18n[genre] %>
      </button>
    <% end %>

  </div>
</div>

  <%= form_with url: import_from_master_my_menus_path,
              method: :post,
              data: { controller: "modal", turbo_frame: "_top" } do |f| %>

    <div class="bg-[#faf0e6] p-8 mt-6 rounded-2xl space-y-6">
  <div class="grid grid-cols-2 sm:grid-cols-3 gap-6">
    <% @master_menus.each do |menu| %>
      <button
        type="button"
         class="menu-card px-5 py-3 border border-base-300 rounded-xl bg-white text-sm
         shadow-sm transition hover:shadow-md
         hover:bg-base-200"
        data-id="<%= menu.id %>"
        data-genre="<%= menu.genre %>">

        <span class="font-semibold"><%= menu.title %></span>
      </button>
    <% end %>
  </div>
</div>


      <div class="pt-6 flex justify-center gap-4">
     <%= f.submit "登録内容を確認", class: "bg-blue-500 text-white px-4 py-2 rounded" %>

    <%= link_to home_path,
        class: "btn bg-white text-base-content border border-base-300 hover:bg-base-200" do %>
          ← ホーム
    <% end %>
  </div>
  <% end %>

  <%= turbo_frame_tag "modal" %>
</div>

