<% if resource.errors.any? %>
  <div class="bg-[#905a65] text-white max-w-xl mx-auto mt-2 px-4 py-3 rounded shadow-lg">
    <ul class="text-sm space-y-1">
      <% resource.errors.full_messages.each do |message| %>
        <li>・<%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="min-h-screen flex items-center justify-center">
  <div class="card w-full max-w-[90%] sm:max-w-sm shadow-xl
              px-4 py-3 sm:px-6 sm:py-6
              bg-[#faf0e6] rounded-2xl">

    <h2 class="text-2xl font-bold text-center mb-4">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-control mb-4">
        <%= f.label :user_name, "Name", class: "label" %>
        <%= f.text_field :user_name, autofocus: true, placeholder: "らんてくん", class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mb-4">
        <%= f.label :email, "Email", class: "label" %>
        <%= f.email_field :email, placeholder: "example@mail.com", class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mb-4">
        <%= f.label :password, "Password", class: "label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mb-4">
        <%= f.label :password_confirmation, "Confirm Password", class: "label" %>
        <%= f.password_field :password_confirmation, class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mt-6">
        <%= f.submit "Create Account",
            class: "btn w-full bg-[#6b5a90] text-white hover:bg-[#5a4a7a] border-none" %>
      </div>
    <% end %>

    <p class="mt-4 text-center text-sm">
      <%= link_to "→ Log in",
          new_user_session_path,
          class: "text-[#6b5a90] hover:underline" %>
    </p>
  </div>
</div>
